<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fin_dia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.march.solorec1.activity_fin_dia">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_centerInParent="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_retourfindia"
        android:text="Menu"
        android:background="@android:color/holo_green_light"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:elevation="0dp"
        android:textColor="@android:color/background_light"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/logotranspa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView5" />

    <TextView
        android:text="Diagnostic d'une installation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/button_retourdebdec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Précédent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:id="@+id/button_precfindia" />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_valdia" />
    <TextView
        android:text="Contrôle apparent de l'état du vase d'expansion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ctrvas"
        android:layout_below="@+id/button_valdia"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_ctrvas"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup_ctrvas">


        <RadioButton
            android:text="Bon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ctrgch1"
            android:id="@+id/radioButton_bctrvas" />

        <RadioButton
            android:text="Mauvais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_mctrvas"
            android:layout_marginLeft="50dp"
            />

    </RadioGroup>
    <TextView
        android:text="Contrôle de la conformité des températures ECS (Départ/Retour)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup_ctrvas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView_ctrecs" />

    <TextView
        android:text="T° départ ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_ctrecs"
        android:layout_alignStart="@+id/textView_ctrtempcir1"
        android:layout_marginTop="20dp"
        android:id="@+id/textView_tempdecs" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_tempdecs"
        android:layout_below="@+id/textView_ctrecs"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:textSize="14sp" />


    <TextView
        android:text="T°retour ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_tempdecs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView_temprecs" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_temprecs"
        android:layout_below="@+id/editText_tempdecs"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:textSize="14sp" />
    <TextView
        android:text="Contrôle du fon fonctionnement du tableau électrique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ctrtab"
        android:layout_below="@+id/editText_temprecs"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_ctrtab"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup_ctrtab">


        <RadioButton
            android:text="Bon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ctrgch1"
            android:id="@+id/radioButton_bctrtab" />

        <RadioButton
            android:text="Mauvais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_mctrtab"
            android:layout_marginLeft="50dp"
            />

    </RadioGroup>
    <TextView
        android:text="Observations générales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_obsdia"
        android:layout_below="@+id/radioGroup_ctrtab"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_height="match_parent"
        android:ems="10"
        android:id="@+id/editText_obsdia"
        android:layout_below="@+id/textView_obsdia"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="14sp" />

</RelativeLayout>
