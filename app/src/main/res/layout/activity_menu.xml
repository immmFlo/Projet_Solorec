<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.march.solorec1.activity_menu">

    <Button
        android:text="DÃ©claration"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:id="@+id/button_declar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/holo_orange_light"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Dimensionnement"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:id="@+id/button_dim"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/holo_blue_bright"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/button_declar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Recherche"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/button_recherche"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/holo_purple"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/button_dim"
        android:layout_alignEnd="@+id/button_declar"
        android:layout_marginTop="60dp" />

    <Button
        android:text="Diagnostic"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/button_diagno"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/holo_green_light"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/button_recherche"
        android:layout_alignStart="@+id/button_recherche"
        android:layout_marginTop="48dp" />

    <Button
        android:text="Retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_retour2" />

</RelativeLayout>
