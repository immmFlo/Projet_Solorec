<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recherche"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.march.solorec1.activity_recherche">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_retourrec"
        android:text="Menu"
        android:background="@android:color/holo_purple"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:elevation="0dp"
        android:textColor="@android:color/background_light"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/logotranspa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView5" />


    <Button
        android:text="Précédent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:id="@+id/button_precrec" />


    <TextView
        android:text="Nom de l'installation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_precrec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView_nominstalr" />
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_nominstalr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_nominstalr"
        android:background="@android:drawable/spinner_background" />
    <TextView
        android:text="Date du diagnostic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView_datdiagr"
        android:layout_below="@+id/spinner_nominstalr"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_datdiagr"
        android:id="@+id/editText_datdiagr"/>
    <Button
        android:text="Rechercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rec"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText_datdiagr"/>

    <TextView
        android:text="Recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/button_retourdebdec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


</RelativeLayout>
